import "utils/multiplexer/2bit" as multiplex

def left() -> (field):
	field bit = 0  //left
	field[2] a  = [0, 1]
	field[2] b = [1, 0]
	
	field[2] output = [0, 1]
	output == multiplex(bit, a, b)
	
	return 1
	
def right() -> (field):
	field bit = 1  //right
	field[2] a  = [0, 1]
	field[2] b = [1, 0]
	
	field[2] output = [1, 0]
	output == multiplex(bit, a, b)
	
	return 1
	
def main() -> (field):

	1 == left()
	1 == right()

	return 1